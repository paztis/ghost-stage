{
  "name": "ghost-stage",
  "displayName": "Ghost Stage",
  "description": "Automatically stages new files in Git",
  "repository": "https://github.com/prophecy1345/ghost-stage",
  "publisher": "ghost-stage",
  "license": "MIT",
  "icon": "images/icon.png",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "stage",
    "add",
    "automatic",
    "files"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ghost-stage.enable",
        "title": "Enable Ghost Stage"
      },
      {
        "command": "ghost-stage.disable",
        "title": "Disable Ghost Stage"
      },
      {
        "command": "ghost-stage.status",
        "title": "Show Ghost Stage Status"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ghost-stage.enable",
          "when": "workspaceHasGit"
        },
        {
          "command": "ghost-stage.disable",
          "when": "workspaceHasGit"
        },
        {
          "command": "ghost-stage.status",
          "when": "workspaceHasGit"
        }
      ],
      "scm/title": [
        {
          "command": "ghost-stage.enable",
          "group": "navigation",
          "when": "workspaceHasGit"
        },
        {
          "command": "ghost-stage.disable",
          "group": "navigation",
          "when": "workspaceHasGit"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.97.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}